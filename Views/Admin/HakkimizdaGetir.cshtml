@model TravelTripProject.Models.Siniflar.Hakkimizda
@{
    ViewBag.Title = "HakkimizdaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımızda Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("HakkimizdaGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.LabelFor(x => x.FotoURL, "Foto URL")
    @Html.TextBoxFor(x => x.FotoURL, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.Aciklama, "Açıklama")
    @Html.TextAreaFor(x => x.Aciklama, 15, 1, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">Hakkımızda Güncelle</button>
}

